{% extends 'base.html.twig' %}

{% block title %}Action{% endblock %}

{% block body %}
<div class="container">
    <header class="page-header">
        <h1>{{ action.ecoAction.title }}</h1>
        <p>{{ action.notes ?: action.ecoAction.description }}</p>
        <div class="hero-actions">
            <a class="button" href="{{ path('app_user_action_edit', { id: action.id }) }}">Modifier</a>
            <form method="post" action="{{ path('app_user_action_delete', { id: action.id }) }}" onsubmit="return confirm('Supprimer cette action ?');">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('user_action_delete_' ~ action.id) }}">
                <button type="submit" class="button ghost">Supprimer</button>
            </form>
        </div>
    </header>

    <div class="metrics">
        <div class="metric">
            <h2>Statut</h2>
            <p>{{ action.status }}</p>
        </div>
        <div class="metric">
            <h2>Date de debut</h2>
            <p>{{ action.startedAt ? action.startedAt|date('Y-m-d') : 'Non defini' }}</p>
        </div>
        <div class="metric">
            <h2>Date de fin</h2>
            <p>{{ action.completedAt ? action.completedAt|date('Y-m-d') : 'Non defini' }}</p>
        </div>
        <div class="metric">
            <h2>Notes</h2>
            <p>{{ action.notes ?: 'Aucune note' }}</p>
        </div>
    </div>
</div>
{% endblock %}