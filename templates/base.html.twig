<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}EcoTrack{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><rect width=%22128%22 height=%22128%22 rx=%2224%22 fill=%22%231f6f5c%22/><text y=%2284%22 x=%2222%22 font-size=%2264%22 fill=%22%23fff%22 font-family=%22Arial%22>ET</text></svg>">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <header class="topbar">
            <a class="brand" href="{{ path('app_home') }}">EcoTrack</a>
            <nav>
                <a href="{{ path('app_home') }}">Accueil</a>
                {% if app.user %}
                    <a href="{{ path('app_dashboard') }}">Tableau</a>
                    <a href="{{ path('app_record_index') }}">Mes enregistrements</a>
                    <a href="{{ path('app_user_actions') }}">Mes actions</a>
                    <a href="{{ path('app_logout') }}">Deconnexion</a>
                {% else %}
                    <a href="{{ path('app_login') }}">Connexion</a>
                    <a href="{{ path('app_register') }}">Inscription</a>
                {% endif %}
            </nav>
        </header>
        <main>
            {% block body %}{% endblock %}
        </main>
    </body>
</html>