{% extends 'base.html.twig' %}

{% block title %}Nouvel enregistrement{% endblock %}

{% block body %}
<div class="container">
    <h1>Ajouter un enregistrement carbone</h1>

    {% for message in app.flashes('error') %}
        <div class="alert">{{ message }}</div>
    {% endfor %}

    <form method="post" class="form-grid" data-controller="carbon-form">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('carbon_record') }}">

        <label for="recorded_at">Date</label>
        <input type="date" id="recorded_at" name="recorded_at">

        <label for="category">Cat&eacute;gorie</label>
        <select id="category" name="category" required data-carbon-form-target="category" data-action="change->carbon-form#toggle">
            <option value="transport">Transport</option>
            <option value="energy">&Eacute;nergie</option>
            <option value="food">Alimentation</option>
            <option value="digital">Num&eacute;rique</option>
        </select>

        <div class="form-section" data-carbon-form-target="section" data-category="transport">
            <div class="section-title">Transport</div>
            <label for="distance_km">Distance (km)</label>
            <input type="number" id="distance_km" name="distance_km" step="0.1">

            <label for="mode">Mode transport</label>
            <select id="mode" name="mode">
                <option value="car">Voiture</option>
                <option value="bus">Bus</option>
                <option value="train">Train</option>
                <option value="plane">Avion</option>
            <option value="bike">V&eacute;lo</option>
                <option value="walk">Marche</option>
            </select>
        </div>

        <div class="form-section" data-carbon-form-target="section" data-category="energy">
            <div class="section-title">&Eacute;nergie</div>
            <label for="kwh">&Eacute;nergie (kWh)</label>
            <input type="number" id="kwh" name="kwh" step="0.1">

            <label for="energy_type">Type d&apos;&eacute;nergie</label>
            <select id="energy_type" name="energy_type">
                <option value="electricity">&Eacute;lectricit&eacute;</option>
                <option value="gas">Gaz</option>
            </select>
        </div>

        <div class="form-section" data-carbon-form-target="section" data-category="food">
            <div class="section-title">Alimentation</div>
            <label for="meals">Nombre de repas</label>
            <input type="number" id="meals" name="meals" step="1">

            <label for="meal_type">Type de repas</label>
            <select id="meal_type" name="meal_type">
                <option value="meat">Avec viande</option>
                <option value="vegetarian">V&eacute;g&eacute;tarien</option>
                <option value="vegan">Vegan</option>
            </select>
        </div>

        <div class="form-section" data-carbon-form-target="section" data-category="digital">
            <div class="section-title">Num&eacute;rique</div>
            <label for="hours">Dur&eacute;e (heures)</label>
            <input type="number" id="hours" name="hours" step="0.1">

            <label for="activity">Activit&eacute; num&eacute;rique</label>
            <select id="activity" name="activity">
                <option value="streaming_hour">Streaming</option>
                <option value="browsing_hour">Navigation web</option>
            </select>
        </div>

        <label for="notes">Notes</label>
        <textarea id="notes" name="notes" rows="3"></textarea>

        <button type="submit">Enregistrer</button>
    </form>
</div>
{% endblock %}
